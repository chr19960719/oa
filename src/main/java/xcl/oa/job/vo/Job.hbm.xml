<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="xcl.oa.job.vo.Job" table="job">
		<id name="jobID">
			<generator class="native"/>
		</id>
		<property name="jobName"/>
		<property name="jobText"/>
		<many-to-one name="dept" lazy="false" class="xcl.oa.dept.vo.Dept" column="deptID" cascade="delete"/>
		<set order-by="employeeID" name="employees" lazy="false" cascade="delete">
			<key column="jobID"/>
			<one-to-many class="xcl.oa.employee.vo.Employee"/>
		</set>
	</class>
</hibernate-mapping>