<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
	
<struts>
 
    <!-- 默认访问页面 -->
    <package name="oa" extends="struts-default" namespace="/">
		
		<!-- 配置部门模块的Action -->
		<action name="dept_*" class="deptAction" method="{1}">
			<result name="success">/WEB-INF/view/success.html</result>	
			<result name="save">/WEB-INF/view/dept.jsp</result>			
		</action>
		
		<action name="test_*" class="testAction" method="{1}">
		</action>
		
    </package>
 
    
     
    <!-- 引入资源文件 -->
    <constant name="struts.custom.i18n.resources" value="messageResource"></constant>
 
</struts>