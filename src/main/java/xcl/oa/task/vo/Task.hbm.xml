<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="xcl.oa.task.vo.Task" table="task">
		<id name="taskID">
			<generator class="native"/>
		</id>
		<property name="taskName"/>
		<property name="taskInfo"/>
		<property name="getTime"/>
		<property name="taskState"/>
		<many-to-one name="employee" lazy="false" class="xcl.oa.employee.vo.Employee" column="employeeID" cascade="delete"/>
	</class>
</hibernate-mapping>