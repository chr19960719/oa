<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
	
<struts>
 
 	<!-- 配置上传文件的大小 -->
	<constant name="struts.multipart.maxSize" value="50000000"/>
    <!-- 默认访问页面 -->
    <package name="oa" extends="struts-default json-default" namespace="/">
		
		<!-- 配置部门模块的Action -->
		<action name="dept_*" class="deptAction" method="{1}">
			<result name="success">/WEB-INF/view/success.html</result>	
			<result name="save">/WEB-INF/view/dept.jsp</result>			
		</action>
		
		<!-- 配置员工模块的Action -->
		<action name="employee_*" class="employeeAction" method="{1}">
			<result name="findAll">/jsp/index/user.jsp</result>		
		</action>
		
		<action name="test_*" class="testAction" method="{1}">
			<result type="json" name="success">  
                <param name="root">result</param>     <!-- 这里的jsonData对应action里要返回的map对象 -->  
            </result>
			<interceptor-ref name="fileUpload"/>
			<interceptor-ref name="defaultStack"/>
		</action>
		
    </package>
 
    
     
    <!-- 引入资源文件 -->
    <constant name="struts.custom.i18n.resources" value="messageResource"></constant>
 
</struts>